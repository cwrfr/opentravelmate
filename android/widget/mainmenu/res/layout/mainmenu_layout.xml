<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewMainMenuLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
        android:text="@string/mainmenu_logo"
        android:textSize="21sp"
        android:textStyle="bold"
	    android:layout_marginTop="13dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >
        
        <ImageButton
            android:id="@+id/imageButtonOpenMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="false"
            android:background="@drawable/button_selector"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_btn_more"
            android:contentDescription="@string/mainmenu_imageButtonOpenMenu_contentDescription" />
        
    </LinearLayout>

</RelativeLayout>